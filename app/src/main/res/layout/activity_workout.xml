<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/HomepageButton"
        android:id="@+id/suggested_workout_button"
        android:layout_marginBottom="4dp"
        android:text="Common Workouts"/>
    <Button
        android:id="@+id/favorite_workout_list_button"
        style="@style/HomepageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="favorites list" />
</LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/workout_name"
        android:hint="enter workout"
        android:autofillHints="0" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/workout_type"
        android:hint="enter workout type"
        android:autofillHints="0" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calorie_used"
        android:hint="enter number calories burned"
        android:inputType="numberDecimal"
        android:autofillHints="0" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:background="@null"
            android:src="@drawable/enter_button"
            android:id="@+id/workout_submit_button"
            style="@style/HomepageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:text="@string/submit_entry" />

        <ImageButton
            android:id="@+id/favorite_workout_entry_button"
            style="@style/HomepageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="Add to Favorites"
            android:background="@null"
            android:src="@drawable/fav_heart"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/workout_fragment_container"/>
</LinearLayout>