<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HealthyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--Setting the colors of the background, text, and hint text -->
        <item name="android:background">@color/background_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="android:textColorHint">@color/hint_text_color</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_color</item>
        <item name="colorPrimaryVariant">@color/header_color</item>
        <item name="colorOnPrimary">@color/button_text_color</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/button_color</item>
        <item name="colorSecondaryVariant">@color/button_color</item>
        <item name="colorOnSecondary">@color/button_color</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Changing the button style, edittext style, and alert dialog style -->
        <item name="buttonStyle">@style/HomepageButton</item>
        <item name="android:buttonStyle">@style/HomepageButton</item>
        <item name="editTextStyle">@style/gacEditText</item>
        <item name="android:editTextStyle">@style/gacEditText</item>

        <item name="android:alertDialogStyle">@style/gacDialog</item>

    </style>


    <style name="ClassicTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/background_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="HomepageButton" parent ="Widget.AppCompat.Button">
        <item name="android:background">@drawable/main_menu_button</item>
        <item name="android:color">@color/button_color</item>
        <item name="android:textColor">@color/button_text_color</item>
    </style>

    <style name="gacEditText" parent ="Widget.AppCompat.EditText">
        <item name="backgroundTint">@color/text_color</item>
    </style>

    <style name="gacDialog" parent ="Theme.AppCompat.Light.Dialog.Alert">
        <item name="textColorAlertDialogListItem">@color/text_color</item>
        <!--<item name="android:listChoiceIndicatorMultiple">@drawable/activated_checkbox</item>-->
        <item name="buttonBarNegativeButtonStyle">@style/HomepageButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/HomepageButton</item>

    </style>

    <style name="gacCheckBox">
        <item name="colorAccent">@color/text_color</item>
        <item name="android:textColorSecondary">@color/hint_text_color</item>
    </style>


